<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Row containing Item Name and Item Score -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/excerciseName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Item Name"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/excerciseScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Score"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <!-- Grey Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#D3D3D3"/>

        <!-- Row containing Calories, Green Circle ImageView, and Good TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/excerciseCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textStyle="italic"/>

            <!-- Green Circle Image -->
            <ImageView
                android:id="@+id/excerciseScoreIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:background="@drawable/icon_green_circle" />

            <!-- Good TextView -->
            <TextView
                android:id="@+id/excercisescoreDescribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Good"
                android:textSize="14sp"
                android:textStyle="italic"/>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
