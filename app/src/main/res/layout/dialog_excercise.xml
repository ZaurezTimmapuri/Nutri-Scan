<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="26dp">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_calorie_burnt">
        </ImageView>

        <!-- Title TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Your How much you burned !"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp" />

        <!-- EditText with border -->
        <EditText
            android:id="@+id/activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Weight lifting"
            android:background="@drawable/bg_text_border"
            android:padding="12dp"
            android:textStyle="italic"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="70 (in pounds)"
            android:background="@drawable/bg_text_border"
            android:padding="12dp"
            android:textStyle="italic"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"/>
        <EditText
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="30 (in minutes)"
            android:background="@drawable/bg_text_border"
            android:padding="12dp"
            android:textStyle="italic"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"/>

        <!-- Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <Button
                android:id="@+id/excercise_searchButton"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:text="Search"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/green"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/excercise_clearButton"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:text="Cancel"
                android:layout_weight="1"
                android:backgroundTint="@color/red"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
