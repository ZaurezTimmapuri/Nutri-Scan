<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="16dp"
    android:gravity="center_vertical">

    <!-- Circular Icon -->
    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_circular"
        android:src="@drawable/icon_dieto"
        android:contentDescription="Icon description"
        android:scaleType="centerCrop" />


    <com.example.nutri_scan.utils.Typewriter
        android:id="@+id/aiResponseBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dieto_bubble_ai"
        android:padding="12dp"
        android:text="AI response will appear here"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="visible"/>

