<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_light_background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="bottom"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="10dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Food Icon -->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_food_calorie" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Your Food!"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="8dp" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Search for food items and find out how good it is!"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <!-- Input Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Enter food items"
                card_view:boxStrokeColor="#000000"
                card_view:cursorColor="#000000"
                card_view:hintTextColor="#000000"
                card_view:placeholderTextColor="#000000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:padding="10dp"
                    android:shadowColor="#000000"
                    android:textColor="#000000"
                    android:textColorHighlight="#80D8FF"
                    android:textColorHint="#757575"
                    android:textColorLink="#1E88E5"
                    android:textStyle="italic" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/clearButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Cancel"
                    android:backgroundTint="@color/red"
                    android:textColor="@android:color/white"
                    android:padding="12dp" />

                <Button
                    android:id="@+id/searchButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Search"
                    android:fontFamily="@font/montserrat_medium"
                    android:backgroundTint="@color/green"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp"
                    android:padding="12dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
