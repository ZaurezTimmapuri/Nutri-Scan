<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="28dp"
    android:background="@drawable/loading_bg"
    android:layout_margin="20dp"
    android:elevation="8dp">

    <ProgressBar
        android:id="@+id/progressBar_validation"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:indeterminateTint="@color/green"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textView_validation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar_validation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Validating data..."
        android:textColor="@color/green"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/subTextView_validation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_validation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Please wait while we verify your information"
        android:textColor="@color/grey"
        android:textSize="14sp" />
</RelativeLayout>